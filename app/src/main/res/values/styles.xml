<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/app_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/light_gray1</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/blue</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray6</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
<!--        <item name="itemIconTint">@color/app_color</item>-->
<!--        <item name="itemTextColor">@color/light_gray6</item>-->
        <item name="paddingStart">6dp</item>
        <item name="paddingEnd">6dp</item>
    </style>


</resources>